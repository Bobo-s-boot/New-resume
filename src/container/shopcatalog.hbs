<html>
  <main>
    <div class='col-7'>
      <div class='row'>
        <div class='col-12'>
          {{#each breadcrumb}}
            {{#if @last}}
              {{name}}
            {{else}}
              <a href='{{url}}'>{{name}}</a>/
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
    <br />
    <h1>{{header}}</h1>
    <br />
    {{! sortBlock }}
    <div class='row'>
      <div class='col-12 d-flex align-items-center'>
        {{#each sortBlock}}
          <div class='row'>
            <div class='col-12'>
              <select class='form-select form-select-sm'>
                <option>{{placeholder}}</option>
                {{#each options}}
                  <option
                    value='{{value}}'
                  >{{text}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <br />
    {{! filterBlock }}
    <div class='row'>
      <div class='col-sm'>
        <div class='card col-6'>
          {{#with filterBlock}}
            <div>{{sellers.title}}</div>
            <br />
            <div class='col-12'>
              <div class='form-check'>
                <label class='form-check-label'>Machinery
                </label>
                <input
                  name='list'
                  type='checkbox'
                  class='form-check-input'
                />
              </div>
              <div class='form-check'>
                <label class='form-check-label'>iнші
                </label>
                <input
                  name='list'
                  type='checkbox'
                  class='form-check-input'
                />
              </div>
            </div>
            <hr />

            {{#with brands}}

              <div>{{title}}</div>
              <br />
              <input
                class='form-control'
                value='{{input.placeholder}}'
              />
              <br />
              {{#each options}}
                <div class='form-check'>
                  <label
                    class='form-check-label'
                  >{{value}}</label>
                  <input
                    name='tex'
                    type='checkbox'
                    class='form-check-input'
                  />
                </div>
              {{/each}}
            {{/with}}
            <hr />
            {{#with price}}
              <div>{{title}}</div>
              <br />
              <input
                class='form-control'
                value='{{range.from}}'
              />
              <br />
              <input
                class='form-control'
                value='{{range.to}}'
              />
              <br />
              <div class='col-12'>
                <button
                  class='btn btn-outline-info'
                >{{button.text}}</button>
              </div>
              <hr />
            {{/with}}
            {{#each filterList}}
              <div class='col-12'>
                <div>{{title}}</div>
                <div class='form-check'>
                  {{#each options}}
                    <div class='col-12'>
                      <label
                        class='form-check-label'
                      >{{value}}</label>
                      <input
                        name='name'
                        type='checkbox'
                        class='form-check-input'
                      />
                    </div>
                  {{/each}}
                  <hr />
                </div>
              </div>
            {{/each}}
          {{/with}}
        </div>
      </div>
      <div class='col-sm'>
        <div class='row d-flex'>
          {{#each goodsList}}
            <div class='col-6'>
              <div class='card'>
                <div class='card-header'>
                  <img
                    src='{{img}}'
                    style='max-width:100%; height:auto;'
                  />
                </div>
                <div class='card-body'>
                  <div class='col-12'>
                    <span
                      class='badge text-bg-warning rounded-pill text-capitalize'
                    >{{isHot}}</span>
                    <span
                      class='badge text-bg-danger rounded-pill text-capitalize'
                    >{{isNew}}</span>
                    {{#if isFree}}
                      <span
                        class='badge text-bg-success rounded-pill text-capitalize'
                      >{{isFree}}</span>
                    {{/if}}
                    <div class='row'>
                      <div class='col-12 mt-3'>
                        <span
                          class='badge text-bg-secondary rounded-pill text-capitalize'
                        >Швидка доставка</span>
                        <br />
                        <br />
                        <span
                          class='badge text-bg-info rounded-pill text-capitalize'
                        >Безкоштовна доставка</span>
                      </div>
                    </div>
                    <div class='display-6'>{{name}}</div>
                    <p>{{review.amount}}:{{review.text}}</p>
                    <h6 class='display-5'>{{price}}</h6>
                    <p>{{delivery}}</p>
                    {{#each buttons}}
                      <div class='col-12'>
                        {{#if isPrimary}}
                          <button
                            class='btn btn-info'
                          >{{text}}</button>
                        {{/if}}
                        <br />
                        {{#if isSecondary}}
                          <button
                            class='btn btn-Secondary'
                          >{{text}}</button>
                        {{/if}}
                      </div>
                    {{/each}}
                    {{#each characteristics}}
                      <li>
                        {{title}}:{{value}}
                      </li>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
        <br />
      </div>
    </div>

  </main>
</html>