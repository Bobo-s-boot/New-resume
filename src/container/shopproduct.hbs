<main>
  <div class='card row'>
    <div class='pt-1'>
      <h1 class='display-4'>Logo</h1>
    </div>
    <div class='col-12 nav nav-tabs justify-content-end'>
      <div class='d-flex justify-content-end'>
        {{#with navigation}}
          {{#each links}}
            <a
              href='{{href}}'
              class='ml-auto'
            >{{text}}</a>&nbsp;&nbsp;
          {{/each}}
        {{/with}}
      </div>
    </div>
  </div>
  <br />

  <div class='col-7'>
    <div class='row'>
      <div class='col-12 mb-5'>
        {{#each breadcrumb}}
          <a href='{{url}}'>{{name}}</a>{{#unless @last}}
            /
          {{/unless}}
        {{/each}}
      </div>
    </div>
  </div>
  <br />

  <div class='col'>
    <div class='row'>
      {{#with productData}}
        <div class='card'>
          <img
            src='{{img}}'
            style='max-width:100%; height:auto;'
          />
        </div>
         </div>
         <br>

         <div class='col'>
        {{#with info}}
          <div class='card'>
            <h3>{{title}}</h3>
            <p>{{about}}</p>
            <h3>{{price}}</h3>
            {{#each category}}
              {{#if isHot}}
                <span
                  class='badge text-bg-danger rounded-pill text-capitalize'
                >{{name}}</span>
              {{/if}}
              {{#if isNew}}
                <span
                  class='badge text-bg-warning rounded-pill text-capitalize'
                >{{name}}</span>
              {{/if}}
              {{#if isBonus}}
                <span
                  class='badge text-bg-info rounded-pill text-capitalize'
                >{{name}}</span>
              {{/if}}
            {{/each}}
          </div>
        {{/with}}
        </div>
        <br>
      
        <div class="col">
  <div class="card col-12">
    <div class="card-body d-flex justify-content-between">
      {{#each actionList}}
        {{#if isWarning}}
          <button class="btn btn-warning">{{name}}</button>
        {{/if}}
        {{#if isError}}
          <button class="btn btn-danger">{{name}}</button>
        {{/if}}
        {{#if isSuccess}}
          <button class="btn btn-success">{{name}}</button>
        {{/if}}
        {{#if isGood}}
          <button class="btn btn-dark">{{name}}</button>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
  <br>

       <div class="card float-right">
  {{#with item}}
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>color</th>
          <th>price</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>id312<br>id532<br>id643</td>
          <td>blue<br>dark<br>red</td>
          <td>999<br>1050<br>1100</td>
        </tr>
      </tbody>
    </table>
  {{/with}}
</div>
    <br>

<div class="card">
  <div class="card-header">
    {{param.title}}
  </div>
  <div class="card-body">
    <ul>
      {{#each param.list}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
</div>
 <div class="alert {{#if alert.isError}}alert-danger{{/if}}" role="alert">
  {{alert.text}}
</div>

      {{/with}}
       

</main>