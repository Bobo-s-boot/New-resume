<main>
  <div class='col-7'>
    <div class='row'>
      <div class='col-12 mb-5'>
        {{#each breadcrumb}}
          <a href='{{url}}'>{{name}}</a>{{#unless @last}}
            /
          {{/unless}}
        {{/each}}
      </div>
    </div>
  </div>
  <br />

 <div class='row'>
  {{#with productData}}
    <div class='col-md-6'>
      <div class='card-header'>
        <img src='{{img}}' style='max-width:100%; height:auto;'/>
      </div>
      <div class='card'>
        <h3>{{info.title}}</h3>
        <p>{{info.about}}</p>
        <h3>{{info.price}}</h3>
        {{#each info.category}}
          {{#if isHot}}
            <span class='badge text-bg-danger rounded-pill text-capitalize'>{{name}}</span>
          {{/if}}
          {{#if isNew}}
            <span class='badge text-bg-warning rounded-pill text-capitalize'>{{name}}</span>
          {{/if}}
          {{#if isBonus}}
            <span class='badge text-bg-info rounded-pill text-capitalize'>{{name}}</span>
          {{/if}}
        {{/each}}
      </div>
    </div>

    <div class='col-md-6'>
      <div class='row'>
        <div class='col'>
          {{#with item}}
            <div class='card'>
              <table class='table table-striped table-bordered'>
                <thead>
                  <tr>
                    <th>#</th>
                    <th>color</th>
                    <th>price</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>id312<br>id532<br>id643</td>
                    <td>blue<br>dark<br>red</td>
                    <td>999<br>1050<br>1100</td>
                  </tr>
                </tbody>
              </table>
            </div>
          {{/with}}
        </div>
      </div>

      <br>

      <div class='row'>
        <div class='col'>
          <div class='card'>
            <div class='card-header'>
              {{param.title}}
            </div>
            <div class='card-body'>
              <ul>
                {{#each param.list}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>

      <br>

      <div class='row'>
        <div class='col'>
          <div class='alert {{#if alert.isError}}alert-danger{{/if}}' role='alert'>
            {{alert.text}}
          </div>
       

        </div>
      </div>
    </div>
  {{/with}}
</div>

       
<br>

{{#with goodsOtherBlock}}
 <h1 class="text-center">{{title}}</h1>
 <br>
 <div class="row display-flex">
   {{#each cards}}
     <div class="col-lg-4">
       <div class="card">
        <div class="card-header">
         <img src="{{image}}" width="150">
        </div>
        <div class="card-body">
         <h6>{{title}}</h6>
         <br>
         <p>{{description}}</p>
         {{#if @first}}
           {{#if isHot}} <span class="badge text-bg-info rounded-pill text-capitalize">{{isHot}}</span> {{else}} <span class="badge text-bg-warning rounded-pill text-capitalize">{{idNew}}</span> {{/if}}
         {{/if}}
         {{#if @first}}
           {{#if isHot}} <span class="badge text-bg-info rounded-pill text-capitalize">{{isHot}}</span> {{else}} <span class="badge text-bg-danger rounded-pill text-capitalize">{{idNew}}</span> {{/if}}
         {{/if}}
        </div>
       </div>
     </div>
   {{/each}}
 </div>
{{/with}}
<br>
<hr>
<br>


{{#with service}}
   <div class="card text-bg-success">
   <div class="card-header text-center ">
    <h1>{{title}}</h1>
   </div>
   <div class="card-body text-center">
    <p>{{description}}</p>
    {{#each buttons}}
     <button class=" btn btn-dark {{link}}">{{text}}</button>
    {{/each}}
   </div>
   </div>
{{/with}}

</main>